<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gallery.my.search.dao.ISearchDAO">


<select id="exhList"  resultType="com.gallery.my.search.vo.SearchVO">
	
	SELECT exh_no
         , exh_nm
         , exh_ad
         , exh_tn
	FROM exhibit_list

</select>

<select id="exhCont"  resultType="com.gallery.my.search.vo.SearchVO" parameterType="int">
	
	SELECT exh_no
	     , exh_nm
	     , exh_ad
	     , exh_tn
	     , st_dt
	     , end_dt
	     , exh_cost
	FROM exhibit_list
	WHERE exh_no = #{exhNo}

</select>

</mapper>